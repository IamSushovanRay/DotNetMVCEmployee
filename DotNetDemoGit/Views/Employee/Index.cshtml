@model IEnumerable<DotNetDemoGit.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Department ID</th>
            <th>Salary</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.Name</td>
                <td>@employee.DepartmentID</td>
                <td>@employee.Salary</td>
                <td>@employee.Gender</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = employee.EmployeeID }) |
                    @Html.ActionLink("Details", "Details", new { id = employee.EmployeeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = employee.EmployeeID })
                </td>
            </tr>
        }
    </tbody>
</table>
